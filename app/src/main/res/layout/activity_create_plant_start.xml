<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background"
    tools:context=".CreatePlantStartActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/containerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:importantForAccessibility="no">


            <TextView
                android:id="@+id/addPlantsTextView"
                android:layout_width="283dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="식물 등록 페이지 입니다."
                android:textColor="@color/main_text"
                android:textSize="26sp"
                android:textStyle="bold"
                android:contentDescription="식물 등록 페이지 안내" />

            <TextView
                android:id="@+id/noPlantsTextView"
                android:layout_width="283dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="60dp"
                android:contentDescription="갤러리 사진 선택과 사진 찍기 중 원하는 식물 등록 방식을 선택해주세요."
                android:text="갤러리 사진 선택과 사진 찍기 중 식물 등록 방식을 선택해주세요."
                android:textColor="@color/main_text"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bringGalleryBtn"
                android:layout_width="240dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:text="사진 선택"
                android:backgroundTint="@color/button"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:textStyle="bold"
                android:contentDescription="@string/gallery_button_description" />

            <Button
                android:id="@+id/TakePicBtn"
                android:layout_width="240dp"
                android:layout_height="70dp"
                android:textSize="20sp"
                android:text="사진 찍기"
                android:textStyle="bold"
                android:backgroundTint="@color/button"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:contentDescription="@string/shutter_button_description"/>

            <Button
                android:id="@+id/backButton"
                android:layout_width="240dp"
                android:layout_height="70dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:backgroundTint="@color/button"
                android:textColor="@color/black"
                android:contentDescription="@string/back_button"
                android:text="뒤로가기" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
